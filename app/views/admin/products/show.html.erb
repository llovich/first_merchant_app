<div class="container">
<div class="row">
<br>
<div class="col-sm-2"></div>
<div class="col-sm-8 well">
<p id="notice"><%= notice %></p>

<h2>Product Info</h2>
<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Current price:</strong>
  <%= @product.current_price %>
</p>

<p>
  <strong>Quantity:</strong>
  <%= @product.quantity %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Category:</strong>
  <%= @product.category.try(:name) %>
</p>

<p>
  <strong>Brand:</strong>
  <%= @product.brand.try(:name) %>
</p>


<%= image_tag @product.avatar.url(:medium) %>

<br>

<%= link_to fa_icon('pencil', text:"edit"), edit_admin_product_path(@product) %> |
<%= link_to fa_icon('arrow-left', text:"back"), admin_products_path %>

</div>
<div class="col-sm-2"></div>
</div>
</div>
