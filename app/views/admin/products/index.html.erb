<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Current price</th>
      <th>Quantity</th>
      <th>Description</th>
      <th>Category</th>
      <th>Brand</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.current_price %></td>
        <td><%= product.quantity %></td>
        <td><%= product.description %></td>
        <td><%= product.category.name %></td>
        <td><%= product.brand.name %></td>
        <td><%= link_to fa_icon('eye', text: "view"), admin_product_path(product) %></td>
        <td><%= link_to fa_icon('pencil', text: "edit"), edit_admin_product_path(product) %></td>
        <td><%= link_to fa_icon('trash', text: "delete"), admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to fa_icon('plus', text: "Add New Product"), new_admin_product_path, class:"btn btn-info" %>

