<!-- Search form -->
<span class="pull-right">
  <%= form_tag(shop_path, method: :get, role: "search", class: "form-inline") do %>
    <div class="form-group">
      <%# TODO: hide the search label %>
      <%# label_tag :search, class: "sr-only" %>
      <%= text_field_tag(:search, nil, placeholder: "Search products", class: "form-control input-sm") %>
    </div>
    <%= submit_tag("Search", class: "btn btn-default btn-sm") %>
  <% end %>
</span>


<h1>Pampered Pups Boutique</h1>
<% if params[:category_id] %>
<h3>All <%= @category.name.titleize %></h3>
<% else %>
<h3>All Products</h3>
<% end %>
<p>Intro text here.</p>

<div class="row">
<% @products.each do |product| %>
  <div class="col-sm-4">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= image_tag product.avatar.url(:medium), class:"img-responsive img-rounded" %>
        <span class="pull-right">
          <h5><%= number_to_currency product.current_price %></h5>
        </span>
        <h5><%= product.name %></h5>
        <span class="pull-right">
        <% #TODO: update w link when we have cart module %>
          <button class="btn btn-warning btn-xs">add to cart</button>
        </span>
        <a href="#" data-toggle="modal" data-target="#product_<%= product.id %>"><small>quick info</small> </a>
      </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="product_<%= product.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"><%= product.name %></h4>
      </div>
      <div class="modal-body">
        <div> <%= image_tag product.avatar.url(:large), class:"img-responsive img-rounded" %>
        </div>
        <div> <%= product.description %></div>
        <div><%=  number_to_currency product.current_price  %></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-warning">add to cart</button>
      </div>
    </div>
  </div>
</div>
<% end %>

</div>
